<section class="py-12 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <h2 class="text-base text-blue-600 font-semibold tracking-wide uppercase">{{ section.settings.kicker }}</h2>
      <p class="mt-2 text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">{{ section.settings.title }}</p>
    </div>
    <div class="mt-10 grid gap-8 md:grid-cols-2">
      {% for block in section.blocks %}
        <div class="bg-white p-6 rounded-lg shadow">
          <div class="flex items-start">
            {% if block.settings.avatar %}
              <img class="h-12 w-12 rounded-full" src="{{ block.settings.avatar | image_url: width: 96 }}" alt="{{ block.settings.name }}">
            {% endif %}
            <div class="ml-4">
              <div class="text-lg font-medium text-gray-900">{{ block.settings.name }}</div>
              <p class="mt-1 text-gray-500">{{ block.settings.quote }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rehab Testimonials",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Overlinje", "default": "Klienters oplevelser" },
    { "type": "text", "id": "title", "label": "Titel", "default": "Hvad siger vores klienter?" }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Omtale",
      "settings": [
        { "type": "image_picker", "id": "avatar", "label": "Avatar" },
        { "type": "text", "id": "name", "label": "Navn", "default": "Mette K." },
        { "type": "textarea", "id": "quote", "label": "Citat", "default": "Fantastisk forløb – jeg har fået min mobilitet tilbage." }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [{ "name": "Rehab Testimonials", "blocks": [{ "type": "testimonial" }, { "type": "testimonial" }] }]
}
{% endschema %}
