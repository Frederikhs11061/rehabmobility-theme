<section class="bg-blue-700">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between">
    <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">
      <span class="block">{{ section.settings.title }}</span>
      <span class="block text-blue-200">{{ section.settings.subtitle }}</span>
    </h2>
    <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
      {% if section.settings.btn1_label and section.settings.btn1_link %}
        <a href="{{ section.settings.btn1_link }}" class="inline-flex items-center justify-center px-5 py-3 rounded-md text-blue-600 bg-white hover:bg-blue-50">
          <i data-feather="mail" class="mr-2"></i> {{ section.settings.btn1_label }}
        </a>
      {% endif %}
      {% if section.settings.btn2_label and section.settings.btn2_link %}
        <a href="{{ section.settings.btn2_link }}" class="ml-3 inline-flex items-center justify-center px-5 py-3 rounded-md text-white bg-blue-600 bg-opacity-60 hover:bg-opacity-70">
          <i data-feather="phone" class="mr-2"></i> {{ section.settings.btn2_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rehab CTA",
  "settings": [
    { "type": "text", "id": "title", "label": "Titel", "default": "Klar til at starte din rejse?" },
    { "type": "text", "id": "subtitle", "label": "Underlinje", "default": "Book en GRATIS forunders√∏gelse i dag." },
    { "type": "text", "id": "btn1_label", "label": "Knap 1 label", "default": "Send en besked" },
    { "type": "url", "id": "btn1_link", "label": "Knap 1 link", "default": "mailto:helena@rehabmobility.dk" },
    { "type": "text", "id": "btn2_label", "label": "Knap 2 label", "default": "Ring til os" },
    { "type": "url", "id": "btn2_link", "label": "Knap 2 link", "default": "tel:41419070" }
  ],
  "presets": [{ "name": "Rehab CTA" }]
}
{% endschema %}
