<section class="bg-white">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
    <div class="relative bg-gray-900 rounded-lg shadow-xl overflow-hidden">
      <div class="absolute inset-0">
        <iframe class="w-full h-full" src="{{ section.settings.map_embed | default: 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2170.127021040302!2d9.40284331592838!3d56.44978098087275!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x464c1f5d6a1e3a9d%3A0x1e3c4d1e3c4d1e3c!2sBrovej%2020%2C%208800%20Viborg!5e0!3m2!1sen!2sdk!4v1620000000000!5m2!1sen!2sdk' }}" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
      </div>
      <div class="relative bg-gray-900 bg-opacity-75 py-16 px-6 sm:py-20 sm:px-12 lg:px-16">
        <div class="relative max-w-2xl mx-auto flex flex-col items-center text-center">
          <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">{{ section.settings.heading }}</h2>
          <p class="mt-3 text-xl text-blue-200">{{ section.settings.address }}</p>
          <div class="mt-8 flex space-x-4">
            {% if section.settings.phone %}<a href="tel:{{ section.settings.phone | strip }}" class="flex items-center justify-center px-5 py-3 rounded-md text-blue-700 bg-white hover:bg-blue-50"><i data-feather="phone" class="mr-2"></i> {{ section.settings.phone }}</a>{% endif %}
            {% if section.settings.email %}<a href="mailto:{{ section.settings.email }}" class="flex items-center justify-center px-5 py-3 rounded-md text-white bg-blue-600 hover:bg-blue-700"><i data-feather="mail" class="mr-2"></i> E-mail</a>{% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rehab Contact + Map",
  "settings": [
    { "type": "text", "id": "heading", "label": "Overskrift", "default": "Besøg os i Viborg" },
    { "type": "text", "id": "address", "label": "Adresse", "default": "Brovej 20, 8800 Viborg" },
    { "type": "text", "id": "phone", "label": "Telefon", "default": "41 41 90 70" },
    { "type": "text", "id": "email", "label": "E‑mail", "default": "helena@rehabmobility.dk" },
    { "type": "textarea", "id": "map_embed", "label": "Google Maps embed URL" }
  ],
  "presets": [{ "name": "Rehab Contact + Map" }]
}
{% endschema %}
