<footer class="bg-gray-800">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">{{ section.settings.brand_title }}</h3>
        <p class="mt-4 text-base text-gray-300">{{ section.settings.brand_text }}</p>
        <div class="mt-4 flex space-x-6">
          {% if section.settings.facebook_url %}<a href="{{ section.settings.facebook_url }}" class="text-gray-400 hover:text-gray-300"><i data-feather="facebook" class="h-6 w-6"></i></a>{% endif %}
          {% if section.settings.linkedin_url %}<a href="{{ section.settings.linkedin_url }}" class="text-gray-400 hover:text-gray-300"><i data-feather="linkedin" class="h-6 w-6"></i></a>{% endif %}
        </div>
      </div>
      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Kontakt</h3>
        <ul class="mt-4 space-y-2">
          {% if section.settings.phone %}<li><a href="tel:{{ section.settings.phone | strip }}" class="text-base text-gray-300 hover:text-white"><i data-feather="phone" class="inline mr-2"></i>{{ section.settings.phone }}</a></li>{% endif %}
          {% if section.settings.email %}<li><a href="mailto:{{ section.settings.email }}" class="text-base text-gray-300 hover:text-white"><i data-feather="mail" class="inline mr-2"></i>{{ section.settings.email }}</a></li>{% endif %}
          {% if section.settings.address %}<li class="text-base text-gray-300"><i data-feather="map-pin" class="inline mr-2"></i>{{ section.settings.address }}</li>{% endif %}
        </ul>
      </div>
      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Information</h3>
        <ul class="mt-4 space-y-2">
          {% for i in (1..4) %}
            {% assign field = 'info_' | append: i %}
            {% if section.settings[field] %}<li class="text-base text-gray-300">{{ section.settings[field] }}</li>{% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="mt-12 border-t border-gray-700 pt-8">
      <p class="text-base text-gray-400 text-center">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Alle rettigheder forbeholdes.</p>
    </div>
  </div>
</footer>

