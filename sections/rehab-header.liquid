<nav class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <a href="{{ routes.root_url }}" class="flex items-center gap-2">
      {% if section.settings.logo %}
        <img src="{{ section.settings.logo | image_url: width: 300 }}" class="h-10" alt="{{ shop.name }}">
      {% else %}<span class="font-semibold">{{ shop.name }}</span>{% endif %}
    </a>
    <div class="hidden md:flex items-center gap-6">
      {% if section.settings.menu and linklists[section.settings.menu] %}
        {% for link in linklists[section.settings.menu].links %}
          <a href="{{ link.url }}" class="text-sm text-gray-700 hover:text-gray-900">{{ link.title }}</a>
        {% endfor %}
      {% endif %}
      {% if section.settings.cta_label and section.settings.cta_link %}
        <a href="{{ section.settings.cta_link }}" class="px-4 py-2 rounded-md text-white bg-blue-600 hover:bg-blue-700 text-sm">
          {{ section.settings.cta_label }}
        </a>
      {% endif %}
    </div>
  </div>
</nav>

{% schema %}
{
  "name": "Rehab Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "link_list", "id": "menu", "label": "Navigation" },
    { "type": "text", "id": "cta_label", "label": "CTA tekst", "default": "41 41 90 70" },
    { "type": "url", "id": "cta_link", "label": "CTA link", "default": "tel:41419070" }
  ],
  "presets": [{ "name": "Rehab Header" }]
}
{% endschema %}
